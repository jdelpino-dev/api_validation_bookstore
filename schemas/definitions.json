{
  "$id": "internal:schemas/definitions.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "isbn": {
      "type": "string",
      "title": "The ISBN Schema",
      "default": "",
      "examples": ["0691161518"],
      "pattern": "^(.*)$"
    },
    "amazon_url": {
      "type": "string",
      "title": "The Amazon URL Schema",
      "default": "",
      "examples": ["http://a.co/eobPtX2"],
      "pattern": "^(.*)$",
      "format": "uri"
    },
    "author": {
      "type": "string",
      "title": "The Author Schema",
      "default": "",
      "examples": ["Matthew Lane"],
      "pattern": "^(.*)$"
    },
    "language": {
      "type": "string",
      "title": "The Language Schema",
      "default": "",
      "examples": ["English"],
      "pattern": "^(.*)$"
    },
    "pages": {
      "type": "integer",
      "title": "The Pages Schema",
      "default": 0,
      "examples": [264]
    },
    "publisher": {
      "type": "string",
      "title": "The Publisher Schema",
      "default": "",
      "examples": ["Princeton University Press"],
      "pattern": "^(.*)$"
    },
    "title": {
      "type": "string",
      "title": "The Title Schema",
      "default": "",
      "examples": ["Power-Up: Unlocking Hidden Math in Video Games"],
      "pattern": "^(.*)$"
    },
    "year": {
      "type": "integer",
      "title": "The Year Schema",
      "default": 0,
      "examples": [2017]
    }
  }
}
